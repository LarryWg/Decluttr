{
  "manifest_version": 3,
  "name": "Decluttr",
  "version": "1.0.0",
  "description": "Email cleanup, AI summaries, focus mode & productivity tools.",
  "permissions": [
    "activeTab", 
    "storage", 
    "scripting"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "action": {
    "default_popup": "popup/App.html",
    "default_title": "Decluttr"
  }
}